{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@global/*": ["src/global/*"],
      "@services/*": ["src/services/*"]
    }
  }
}

